@model WebSenDa.Models.ViewModel

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Danh Sách Sản Phẩm</h2>

@using (Html.BeginForm("Index", "QLSanPham", FormMethod.Get))
{
<div class="row mt-3">
    <input class="user-input-search ml-3" type="text" placeholder="Nhập từ khóa tìm kiếm..." name="search" />

    <button class="btn btn-search btn-info ml-3" type="submit"><i class="fas fa-search"></i> Tìm kiếm</button>

    <a href='@Url.Action("Index", "QLSanPham")' class="btn btn-reload btn-danger ml-3" style="color:black"><i class="fas fa-sync-alt"></i> Tải lại</a>
</div>
}
<a href="@Url.Action("Create","QLSanPham")" class="btn btn-primary user-btn-them mt-3">Thêm mới sản phẩm</a>
<table class="table table-bordered table-hover mt-3 " style="width: 100%">
    <tr class="bg-success" style="width: 100%">
        <th style="width: 22%" >
            @Html.DisplayNameFor(model => model.sanPham.TenSanPham)
        </th>
        <th style="width: 20%"  >
            @Html.DisplayNameFor(model => model.sanPham.Hinh)
        </th>
       
       
        <th style="width: 13%" >
            @Html.DisplayNameFor(model => model.sanPham.Kho.IDSanPham)
        </th>
       
      
        <th style="width: 16%" >
            @Html.DisplayNameFor(model => model.sanPham.LoaiSanPham.TenLoaiSanPham)
        </th>
        <th style="width: 16%" >
            @Html.DisplayNameFor(model => model.sanPham.LoaiSenDa.TenLoaiSenDa)
        </th>
        <th style="width: 13%"></th>
    </tr>

    @foreach (var item in Model.ListSanPham)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSanPham)
            </td>
            <td class="text-center">
                @*@Html.DisplayFor(modelItem => item.Hinh)*@
                <img src="@item.Hinh" style="width:50px;height:50px"/>
            </td>
          
           
            <td>
                @Html.DisplayFor(modelItem => item.Kho.IDSanPham)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoaiSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiSenDa.TenLoaiSenDa)
            </td>
            <td class="text-center " >
                <a class="btn btn-warning mr-3" href="@Url.Action("Edit",new { id=item.IDSanPham})"><span style="margin-right:0px" class="fas fa-pencil-alt"></span></a>
                <a class="btn btn-danger " href="@Url.Action("Details",new { id=item.IDSanPham})"><span style="margin-left:0px" class="far fa-clipboard"></span></a>
            </td>
        </tr>
    }

</table>
